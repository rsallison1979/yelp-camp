<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
				<!-- THE CLASSES HERE ARE ALL PART OF BOOTSTRAP -->
				<!-- THE NAMES GIVEN ARE WHERE WE ARE STORING VALUES TO BE FED FROM THIS FORM TO THE ARRAY AND MATCH ARRAY PROPERTIES -->
					<textarea class="form-control" type="text" name="comment[text]" placeholder="Comments about this campground"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>	
			</form>
			<a href="/campgrounds">Back</a>
		</div>
		
	</div>
</div>


<% include ../partials/footer %>
